<template name="wifi-template">
  <view class='wifiContainer'>
    <view class='info-item'>
      <text class='title'>地点:</text>
      <text class='value'>{{name}}</text>
    </view>
    <view class='info-item'>
      <text class='title'>介绍:</text>
      <text class='value'>{{intro}}</text>
    </view>
    <view class='info-item'>
      <text class='title'>详细地址:</text>
      <text class='value'>{{address}}</text>
    </view>
    <view class='info-item'>
      <text class='title'>距离:</text>
      <text class='value'>{{distance}}</text>
      <text class='distance-font'>m</text>
    </view>
  </view>
</template>